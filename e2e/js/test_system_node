#!/usr/bin/env bash
set -euo pipefail
# shellcheck source-path=SCRIPTDIR
source "$(dirname "$0")/assert.sh"

if ! system_node="$(which node)"; then
  warn "skipping test: no system-wide installation of node"
  exit 0
fi

echo v20.0.0 >.node-version
mise_node="$(mise which node)"

assert "mise x node@system nodejs@system -- which node" "$system_node"
assert "mise x -- which node" "$mise_node"
