#!/usr/bin/env bash
set -euo pipefail
# shellcheck source-path=SCRIPTDIR
source "$(dirname "${BASH_SOURCE[0]}")"/../assert.sh

assert "MISE_CARGO_BINSTALL=1 mise x cargo:eza@0.17.0 -- eza -v" "eza - A modern, maintained replacement for ls
v0.17.0 [+git]
https://github.com/eza-community/eza"

skip_slow_test

mise rm cargo:eza@0.17.0
assert "MISE_CARGO_BINSTALL=0 mise x cargo:eza@0.17.0 -- eza -v" "eza - A modern, maintained replacement for ls
v0.17.0 [+git]
https://github.com/eza-community/eza"
