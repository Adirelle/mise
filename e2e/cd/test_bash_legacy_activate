#!/usr/bin/env bash
set -euo pipefail
# shellcheck source-path=SCRIPTDIR
source "$(dirname "${BASH_SOURCE[0]}")"/../assert.sh

echo "tiny 3.1.0" >"$MISE_DEFAULT_TOOL_VERSIONS_FILENAME"
mkdir subdir
echo "tiny 2.0.0" >"subdir/$MISE_DEFAULT_TOOL_VERSIONS_FILENAME"

mise install tiny@3.1.0 tiny@2.0.0

# shellcheck disable=SC1090
eval "$(mise activate -s bash --status)"

_mise_hook
assert_contains "rtx-tiny" "v3.1.0"

cd subdir && _mise_hook
assert_contains "rtx-tiny" "v2.0.0"

cd .. && _mise_hook
assert_contains "rtx-tiny" "v3.1.0"
